<section class="">
  <div class="container mx-auto p-5 flex flex-col gap-10">
    <% if(locals.messages.length != 0) {%> 
      <% messages.forEach((msg) => { %>
        <div class="border-y-2 rounded-2xl border-white p-5 drop-shadow-[0_0px_8px_rgb(255,255,255)] transition-all duration-200 sm:hover:scale-110 sm:hover:shadow-md sm:hover:shadow-white select-none">
          <div class="flex sm:gap-5 flex-col sm:flex-row justify-between items-start mb-5 sm:mb-2">
            <h2 class="text-2xl font-script font-bold"> <%= msg.username %> </h2>
            <h3 class="font-mono font-light self-end"> <%= msg.added %> </h3>
          </div>
          <p class="ml-2"> <%= msg.text %> </p>
        </div>
      <% }) %>
    <% } else { %> 
      <div
        class="container mx-auto mt-32 flex w-fit select-none flex-col items-center justify-center rounded-3xl border-2 border-white p-10 font-mono shadow-lg shadow-white drop-shadow-[0_0px_8px_rgb(255,255,255)]"
      >
        <h1 class="mb-5 text-7xl md:text-9xl">Oops!</h1>
        <p class="text-center">
          There are no messages, add more messages to view them here.
        </p>
      </div>
    <% } %>
  </div>
</section>