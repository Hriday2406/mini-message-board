<section class="">
  <div class="container mx-auto p-5 flex flex-col gap-10">
    <% messages.forEach((msg) => { %>
      <div class="border-y-2 rounded-2xl border-white p-5 drop-shadow-[0_0px_8px_rgb(255,255,255)] transition-all duration-200 hover:scale-110 hover:shadow-md hover:shadow-white select-none">
        <div class="flex gap-5 justify-between items-center mb-2">
          <h2 class="text-2xl font-script font-bold"> <%= msg.user %> </h2>
          <h3 class="font-mono font-light"> <%= msg.added %> </h3>
        </div>
        <p class="ml-2"> <%= msg.text %> </p>
      </div>
    <% }) %>
  </div>
</section>